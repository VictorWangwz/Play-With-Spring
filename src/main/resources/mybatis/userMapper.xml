<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.victorwangzhen.coolapp.model.mybatis.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.victorwangzhen.coolapp.model.entity.User">
        <id column="id" jdbcType="VARCHAR" property="id"/>
        <result column="username" jdbcType="VARCHAR" property="username"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
    </resultMap>

    <sql id="BaseColumnList">
        id, username
    </sql>

    <insert id="insert" parameterType="com.victorwangzhen.coolapp.model.entity.User">
        insert into user (id, username, password)
        values (#{id, jdbcType=VARCHAR}, #{username, jdbcType=VARCHAR}, #{password, jdbcType=VARCHAR})
    </insert>

    <select id="getAll" resultMap="BaseResultMap">
        select * from user
    </select>



</mapper>